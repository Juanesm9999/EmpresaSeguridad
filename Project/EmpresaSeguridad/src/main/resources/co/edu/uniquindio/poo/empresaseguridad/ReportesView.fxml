<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.empresaseguridad.viewController.ReportesViewController"
      spacing="15" style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Título -->
    <HBox alignment="CENTER">
        <Label text="Sistema de Reportes" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>

    <Separator/>

    <!-- Panel de resumen -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;">
        <Label text="Resumen Financiero" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <HBox spacing="30">
            <Label fx:id="lblGastoTotal" text="Gasto Nómina: $0.00" style="-fx-font-size: 14px;"/>
            <Label fx:id="lblCostoServicios" text="Costo Servicios: $0.00" style="-fx-font-size: 14px;"/>
            <Label fx:id="lblValorEquipos" text="Valor Equipos: $0.00" style="-fx-font-size: 14px;"/>
        </HBox>
    </VBox>

    <!-- Selección de reporte -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="150"/>
            <ColumnConstraints minWidth="300" prefWidth="300"/>
        </columnConstraints>

        <Label text="Tipo de Reporte:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="cmbTipoReporte" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300" promptText="Seleccione tipo de reporte"/>

        <Label text="Documento Empleado:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtDocumentoEmpleado" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Solo para reporte de dotación"/>
    </GridPane>

    <!-- Botón generar -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnGenerar" text="Generar Reporte" onAction="#onGenerar"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"
                prefWidth="150" prefHeight="35"/>
    </HBox>

    <Separator/>

    <!-- Área de visualización del reporte -->
    <VBox VBox.vgrow="ALWAYS">
        <Label text="Reporte Generado" style="-fx-font-size: 16px; -fx-font-weight: bold;">
            <padding>
                <Insets bottom="5"/>
            </padding>
        </Label>

        <TextArea fx:id="txtReporte" VBox.vgrow="ALWAYS" editable="false"
                  style="-fx-font-family: 'Courier New'; -fx-font-size: 12px;"
                  promptText="Seleccione un tipo de reporte y presione 'Generar Reporte'"/>
    </VBox>

    <!-- Botón regresar -->
    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="btnRegresar" text="Regresar" onAction="#onRegresar"
                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold;"
                prefWidth="100"/>
    </HBox>
</VBox>
