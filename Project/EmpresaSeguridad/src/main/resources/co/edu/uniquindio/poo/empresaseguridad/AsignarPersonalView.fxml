<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"

            fx:controller="co.edu.uniquindio.poo.empresaseguridad.viewController.AsignarPersonalViewController">
    <children>
        <Label text="Asignar Personal a Servicio" layoutX="30" layoutY="20" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <ComboBox fx:id="comboServiciosActivos" layoutX="30" layoutY="60" prefWidth="300"/>
        <TableView fx:id="tablaEmpleadosDisponibles" layoutX="30" layoutY="110" prefWidth="400" prefHeight="200">
            <columns>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="120"/>
                <TableColumn fx:id="colDocumento" text="Documento" prefWidth="120"/>
                <TableColumn fx:id="colTurno" text="Turno" prefWidth="120"/>
            </columns>
        </TableView>
        <Button fx:id="btnAsignar" text="Asignar" layoutX="30" layoutY="330" onAction="#asignarPersonal"/>
    </children>
</AnchorPane>

